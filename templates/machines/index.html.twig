{% extends 'base.html.twig' %}

{% block title %}Machines index{% endblock %}

{% block body %}
    <h1>Machines index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Image</th>
                <th>NbrMachines</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for machine in machines %}
            <tr>
                <td>{{ machine.id }}</td>
                <td>{{ machine.name }}</td>
                <td>{{ machine.description }}</td>
                <td>{{ machine.image }}</td>
                <td>{{ machine.nbrMachines }}</td>
                <td>
                    <a href="{{ path('app_machines_show', {'id': machine.id}) }}">show</a>
                    <a href="{{ path('app_machines_edit', {'id': machine.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_machines_new') }}">Create new</a>
{% endblock %}
